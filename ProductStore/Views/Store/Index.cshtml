@using ProductStore.Models.Product
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Каталог товарів";
}

<h2 class="mainTaitle">Каталог товарів</h2>

<div class="cardConteiner">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="cardContent">
                <img src="@item.ImageUrl" class="cardImage" alt="@item.Name" />
                <h5>@item.Name</h5>
                <p><strong>Ціна:</strong> @item.Price грн</p>

                <a asp-controller="Store"
                   asp-action="Details"
                   asp-route-id="@item.Id"
                   class="btn btn-primary btn-sm">
                    Детальніше
                </a>
            </div>
        </div>
    }
</div>