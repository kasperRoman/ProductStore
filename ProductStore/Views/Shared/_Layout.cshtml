<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductStore</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>

        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.3rem;
        }

        .footer {
            margin-top: 40px;
            padding: 15px 0;
            background: #f8f9fa;
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm mb-4">
        <div class="container">

            <!-- Логотип -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProductStore</a>

            <!-- Кнопка для мобільного меню -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Меню -->
            <div class="collapse navbar-collapse" id="mainNavbar">

                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Головна</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Store" asp-action="Index">Каталог</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Політика</a>
                    </li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                Адмінка
                            </a>
                        </li>
                    }
                </ul>

                <!-- Login / Logout -->
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer border-top text-muted">
        <div class="container text-center">
            © 2025 ProductStore — всі права захищено
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>