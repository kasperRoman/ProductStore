<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- ✅ Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- ✅ Твої стилі -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .admin-wrapper {
            display: flex;
            min-height: 100vh;
        }

        .admin-sidebar {
            width: 220px;
            background: #343a40;
            padding-top: 20px;
            flex-shrink: 0; /* важливо */
            height: 100vh;
            position: fixed; /* фіксуємо зліва */
            top: 0;
            left: 0;
        }

            .admin-sidebar a {
                color: #fff;
                display: block;
                padding: 10px 20px;
                text-decoration: none;
            }

                .admin-sidebar a:hover {
                    background: #495057;
                }

        .admin-content {
            margin-left: 220px; /* відступ справа від панелі */
            padding: 20px;
            width: calc(100% - 220px); /* щоб контент не падав */
        }
    </style>
</head>

<body>

    <div class="admin-wrapper">
        <div class="admin-sidebar">
            <h4 class="text-white text-center mb-4">Admin Panel</h4>

            <a asp-controller="Products" asp-action="Index">Products</a>
            <a asp-controller="Users" asp-action="Index">Users</a>
            <a asp-controller="Orders" asp-action="Index">Orders</a>

            <hr class="bg-light" />

            <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm">
                <a href="javascript:document.getElementById('logoutForm').submit()" class="text-white">Logout</a>
            </form>
        </div>

        <div class="admin-content">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
