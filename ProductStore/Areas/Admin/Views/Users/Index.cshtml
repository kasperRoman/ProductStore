@using Microsoft.AspNetCore.Identity
@model List<ProductStore.Areas.Admin.Controllers.UserWithRolesViewModel>

@{
    ViewData["Title"] = "Користувачі";
}

<h2>Список користувачів</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>Ролі</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Email</td>
                <td>@item.User.UserName</td>
                <td>
                    @if (item.Roles.Any())
                    {
                        @string.Join(", ", item.Roles)
                    }
                    else
                    {
                        <span class="text-muted">немає ролей</span>
                    }
                </td>
                <td>
                    @if (item.Roles.Contains("Admin"))
                    {
                        <form asp-action="RemoveAdmin" method="post" style="display:inline">
                            <input type="hidden" name="userId" value="@item.User.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Забрати роль Admin</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="AddAdmin" method="post" style="display:inline">
                            <input type="hidden" name="userId" value="@item.User.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Зробити адміністратором</button>
                        </form>
                    }
                </td>
            </tr>
        }

    </tbody>
</table>